<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sergio.strawh.MainScreen"
    android:background="@android:color/white">

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/lButton"
        android:layout_alignTop="@+id/qButton"
        android:layout_alignParentEnd="true"
        android:background="@mipmap/loggin_button" />

    <ImageButton
        android:id="@+id/qButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:background="@mipmap/qr_button" />

    <TextView
        android:text="Scan/Escanear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_below="@+id/qButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textColor="@android:color/black"
        android:layout_below="@+id/qButton"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="53dp" />

    <ImageView
        android:layout_above="@+id/lButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:id="@+id/imageView2"
        android:background="@mipmap/logo"
        android:layout_width="200dp"
        android:layout_height="2000dp" />

</RelativeLayout>
